# Environment
ENV=development

# API Configuration
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=8000
API_LOG_LEVEL=INFO

# Database Configuration - Supabase
DB_DRIVER=postgres
DB_SOURCE_DSN=postgresql://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres
# Or you can use individual components:
# DB_SOURCE_HOST=db.[YOUR_PROJECT_REF].supabase.co
# DB_SOURCE_PORT=5432
# DB_SOURCE_DATABASE=postgres
# DB_SOURCE_USERNAME=postgres
# DB_SOURCE_PASSWORD=[YOUR_PASSWORD]
# DB_SOURCE_SSL_MODE=require

# Database Pool Settings
DB_CONN_MAX_IDLE_TIME=300s
DB_CONN_MAX_LIFE_TIME=300s
DB_MAX_IDLE_CONNS=5
DB_MAX_OPEN_CONNS=10

# Token Configuration
TOKEN_SECRET_KEY=your_secret_key_here
TOKEN_ACCESS_KEY=your_access_key_here
TOKEN_ACCESS_TTL=15m
TOKEN_REFRESH_KEY=your_refresh_key_32_bytes_long_here
TOKEN_REFRESH_TTL=24h

# Email Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password
EMAIL_ADMIN=admin@yourapp.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_REDIRECT_URL=http://localhost:8000/auth/google/callback
OAUTH_GOOGLE_FRONTEND_REDIRECT_URL=http://localhost:3000/auth/callback
